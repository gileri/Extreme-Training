<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>fr.cpe.gae.Index</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Init</servlet-name>
		<servlet-class>fr.cpe.gae.Init</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Domains</servlet-name>
		<servlet-class>fr.cpe.gae.Domains</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Search</servlet-name>
		<servlet-class>fr.cpe.gae.Search</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddTraining</servlet-name>
		<servlet-class>fr.cpe.gae.AddTraining</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>fr.cpe.gae.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Training</servlet-name>
		<servlet-class>fr.cpe.gae.Training</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Init</servlet-name>
		<url-pattern>/init</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddTraining</servlet-name>
		<url-pattern>/addtraining</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Domains</servlet-name>
		<url-pattern>/domains</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Training</servlet-name>
		<url-pattern>/training</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>all</web-resource-name>
			<url-pattern>/login</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>

	<servlet>
		<servlet-name>LoginRequiredServlet</servlet-name>
		<servlet-class>fr.cpe.gae.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginRequiredServlet</servlet-name>
		<url-pattern>/_ah/login_required</url-pattern>
	</servlet-mapping>
</web-app>
